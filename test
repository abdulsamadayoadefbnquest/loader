# ============================================
# docker-compose.yml
# ============================================
version: '3.8'

services:
  nextjs:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: nextjs-app
    restart: unless-stopped
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=production
    # Uncomment if you need environment variables from .env file
    # env_file:
    #   - .env
    networks:
      - app-network

networks:
  app-network:
    driver: bridge
